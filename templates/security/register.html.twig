{% extends '_template.html.twig' %}

{% block title %} Inscription {% endblock %}

{% block content %}

    <div class="section">
        <h1 class="title has-text-centered">Inscription</h1>
        <div class="columns is-centered">
            <div class="column is-one-third">
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email,{
            label : 'Adresse e-mail'
        }) }}
        {{ form_row(registrationForm.pseudo,{
            label : 'Pseudo'
        }) }}
        {{ form_row(registrationForm.nom,{
            label : 'Nom'
        }) }}
        {{ form_row(registrationForm.prenom,{
            label : 'Prénom'
        }) }}
        {{ form_row(registrationForm.telephone,{
            label : 'Téléphone'
        }) }}
        {{ form_row(registrationForm.plainPassword.first, {
            label : 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.plainPassword.second, {
            label : 'Confirmer le mot de passe'
        }) }}
        {# CONSENTEMENT EXPLICIT RGPD #}
        {% set termsOfUseFormGroup %}
            {{ form_row(registrationForm.consentement) }}
        {% endset %}
        {{ termsOfUseFormGroup|replace({'#DOCUMENTATION#':'<a class="has-text-underline" href="' ~ absolute_url(path('donnees_personnelles')) ~ '">documentation RGPD</a>'})|raw }}
        {# Honey Pot - antispam #}
        {{ form_row(registrationForm.phone) }}
        <button type="submit" class="button is-primary is-fullwidth">Inscription</button>
        {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}