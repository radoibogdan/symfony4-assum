{% extends '_template.html.twig' %}

{% block title %} Modification du mot de pass {% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title has-text-centered"> Modification du mot de passe</h1>
        <div class="columns is-centered">
            <div class="column is-one-third">
                {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword.first,{
                    label : 'Mot de passe'
                }) }}
                {{ form_row(resetForm.plainPassword.second, {
                    label : 'Confirmer le mot de passe'
                }) }}
                <input type="hidden" value="{{ token | default('') }}">
                <button class="button is-fullwitdh is-primary">Modifier</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}