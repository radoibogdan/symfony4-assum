<div class="columns is-multiline">
    {% for produit in produits %}
        <div class="column is-one-third"> {# is-one-half / is-one-quarter #}
            <div class="box">
                <article class="media">
                    <div class="media-left">
                        <figure class="image is-128x128">
                            <img src="https://loremflickr.com/256/256/clothes/all?lock={{produit.id}}" alt="Image">
                        </figure>
                    </div>
                    <div class="media-content">
                        <div class="content">
                            <p>
                                <a href="{{ path('affichage_produit',{id: produit.id}) }}" class="has-text-primary">
                                    <strong>{{produit.titre}}</strong>
                                </a>
                                <br>
                                <a href="{#{{ path('category_show',{id: produit.category.id}) }}#}" class="has-background-success has-text-white px-1">
                                    <strong>{{produit.categorie.nom | default('non disponible')}}</strong>
                                </a>
                                <br>
                                Disponible depuis : {{produit.creation|date('m/yy')}}
                                {#
                                    <br>
                                    <small class="has-background-success has-text-white">{{product.category.name}}</small>
                                    <br>
                                #}
                                <br>
                                {{produit.description|slice(0,100) ~ ' (...)'}}
                            </p>
                            <div class="tags has-addons">
                                <span class="tag">{{ produit.rendementFloat|number_format(2, '.', ' ') }}</span>
                                <span class="tag is-primary">
                                    <span class="icon">
                                        <i class="fas fa-percent"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    {% endfor %}
</div>