<div class="columns is-multiline">
    {% for article in articles %}
        <div class="column is-full-mobile is-full-touch is-half-desktop">
            <div class="box">
                <article class="media">
                    <div class="media-content">
                        <div class="content">
                                <h3 class="title is-size-6-touch is-size-4-desktop">
                                    <a href="{{ path('affichage_article',{id: article.id}) }}" class="has-text-primary">
                                        <strong>{{article.titre}}</strong>
                                    </a>
                                </h3>
                            <p>
                                Créé le : {{article.creation|date('m/Y')}}
                                <br>
                                {{article.contenu|slice(0,100) ~ ' (...)'}}
                            </p>
                            <strong class="has-text-primary">Auteur :</strong>
                            <div class="tags has-addons">
                                <span class="tag">
                                    {{ article.auteur.prenom | capitalize ~ ' ' ~ article.auteur.nom | capitalize }}
                                 </span>
                                <span class="tag is-primary">
                                    <span class="icon">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    {% endfor %}
</div>

