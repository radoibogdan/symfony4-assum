{% extends "_admin_template.html.twig" %}

{% block title %}
    Supprimer l'article{{ article.titre }}
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title has-text-centered">Supprimer l'article': "{{ article.titre }}"</h1>

        <div class="columns">
            <div class="column"></div>
            <div class="column is-half">
                {{ form_start(deleteForm) }}

                {{ form_row(deleteForm.confirmation, {
                    label: 'Je confirme la suppression de l\'article "' ~ article.titre ~ '"'
                }) }}

                <button type="submit" class="button is-danger is-fullwidth">
                    Supprimer
                </button>

                {{ form_end(deleteForm)}}
            </div>
            <div class="column"></div>
        </div>

    </div>
{% endblock %}

