<script>
    document.addEventListener('DOMContentLoaded', () => {
        (document.querySelectorAll('.card-header-icon') || []).forEach(($content) =>{
            $content.addEventListener('click', () => {
               //document.querySelector('.card-content').classList.toggle("is-hidden");

                var $examples =  document.querySelector('.card-content');
                if ($examples.getAttribute("class") === "card-content hide")
                    $examples.setAttribute("class", "card-content show")
                else
                    $examples.setAttribute("class", "card-content hide");

               var $span_i =  $content.querySelector('#toggle_dropdown');
               if ($span_i.getAttribute("class") === "fas fa-angle-down")
                   $span_i.setAttribute("class", "fas fa-angle-up")
                else
                   $span_i.setAttribute("class", "fas fa-angle-down");
            });
        });
    });
</script>