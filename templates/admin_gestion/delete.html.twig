{% extends "_admin_template.html.twig" %}

{% block title %}
    Supprimer le type de gestion  {{ gestion.nom }}
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title has-text-centered">Supprimer le type de gestion : "{{ gestion.nom }}"</h1>

        <div class="columns">
            <div class="column"></div>
            <div class="column is-half">
                {{ form_start(deleteForm) }}

                {{ form_row(deleteForm.confirmation, {
                    label: 'Je confirme la suppression du type de gestion "' ~ gestion.nom ~ '"'
                }) }}

                <button type="submit" class="button is-danger is-fullwidth">
                    Supprimer
                </button>

                {{ form_end(deleteForm)}}
            </div>
            <div class="column"></div>
        </div>

    </div>
{% endblock %}

